<section class="left-side">
    <nav>
        <div class="dropdown">
            <svg onclick="ledropdown()" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
            </svg>
            <div class="dropdown-content">
                <a href="">profile</a>
                <!-- <a href="/logout">logout</a> -->
                <form action="/logout" method="post">
                    <button>logout</button>
                </form>
                <!-- dark mode toggle here -->
            </div>
        </div>
        <h3>Le Chat + <%= name, uid %>
        </h3>
    </nav>
    <div class="chats" style="margin-top: 10px;">
        <% if(chats.length> 0){%>
            <% chats.forEach( c=> { %>
                <!-- this href link is only for display, it does not redirect to anything -->
                <a href="/#<%= c.id %>">
                    <!-- the data-id is used for api fetch with the backend -->
                    <div class="chat" data-id="<%= c.id %>">
                        <img src="data:image/jpg;base64,<%= c.Img %>" alt="">
                        <div class="txt">
                            <h5 style="font-size: 20px;" class="name">
                                <%= c.ChatName %>
                            </h5>
                        </div>
                    </div>
                </a>
                <% }) %>
                    <% } else{}%>
    </div>
</section>